# Environment
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/audibook?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS S3 / MinIO
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-key
AWS_SECRET_ACCESS_KEY=your-secret
S3_BUCKET_NAME=audibook-storage
S3_ENDPOINT=http://localhost:9000  # Remove for real AWS

# Azure Cognitive Services
AZURE_SPEECH_KEY="your-azure-key"
AZURE_SPEECH_VOICE="he-IL-AvriNeural"
AZURE_SPEECH_REGION="westeurope"

# Grafana Cloud Loki (optional for local)
LOKI_HOST=
LOKI_BASIC_AUTH=
LOG_LEVEL=debug

# Service names
API_SERVICE_NAME=audibook-api
WORKER_SERVICE_NAME=audibook-worker
WEB_SERVICE_NAME=audibook-web